<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#131313">

    <TextView
        android:id="@+id/gun_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pazartesi"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#2A2A2A"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            tools:ignore="NestedWeights">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/corba_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Çorba:"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/corba_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mercimek"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/ana_yemek_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ana Yemek:"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/ana_yemek_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tavuk"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tatli_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tatlı:"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tatli_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilav"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textAlignment="center" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:backgroundTint="#2A2A2A"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/corba_label_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Çorba:"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/corba_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tarhana"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/ana_yemek_label_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ana Yemek:"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/ana_yemek_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Köfte"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tatli_label_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tatlı:"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tatli_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Makarna"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textAlignment="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>
