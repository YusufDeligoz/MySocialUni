<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Profile Image -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/imageViewProfileEdit"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground"
                android:background="@drawable/circle_bg"
                android:contentDescription="Profile Picture" />

            <ImageView
                android:id="@+id/editProfileImageIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="4dp"
                android:src="@drawable/ic_pencil"
                android:tint="#FFFFFF"
                android:background="@drawable/circle_icon_bg"
                android:padding="4dp" />
        </FrameLayout>

        <!-- Reusable row: Field + Pencil icon -->
        <!-- Name -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">
            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ad Soyad"
                android:backgroundTint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:paddingEnd="40dp" />
            <ImageView
                android:id="@+id/iconEditName"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_pencil"
                android:tint="#FFFFFF" />
        </FrameLayout>

        <!-- Email -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">
            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:backgroundTint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:paddingEnd="40dp" />
            <ImageView
                android:id="@+id/iconEditEmail"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_pencil"
                android:tint="#FFFFFF" />
        </FrameLayout>

        <!-- Department -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">
            <EditText
                android:id="@+id/editTextDepartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bölüm"
                android:backgroundTint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:paddingEnd="40dp" />
            <ImageView
                android:id="@+id/iconEditDepartment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_pencil"
                android:tint="#FFFFFF" />
        </FrameLayout>

        <!-- Class -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">
            <EditText
                android:id="@+id/editTextClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sınıf"
                android:backgroundTint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:paddingEnd="40dp" />
            <ImageView
                android:id="@+id/iconEditClass"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_pencil"
                android:tint="#FFFFFF" />
        </FrameLayout>

        <!-- CV Line -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#1F1F1F"
            android:padding="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/textCVStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CV Ekle"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iconEditCV"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_pencil"
                android:tint="#FFFFFF" />
        </LinearLayout>

        <!-- Buttons -->
        <Button
            android:id="@+id/buttonAddCV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CV Ekle"
            android:textColor="#000000"
            android:backgroundTint="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bitti"
            android:textColor="#000000"
            android:backgroundTint="#FFFFFF" />
    </LinearLayout>
</ScrollView>
